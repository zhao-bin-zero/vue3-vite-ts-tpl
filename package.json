{
  "name": "vue3-vite-ts-tpl",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run lint && vite",
    "test": "npm run lint && vite --mode test",
    "devBuild": "vue-tsc --noEmit && vite build --mode development",
    "testBuild": "vue-tsc --noEmit && vite build --mode test",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "lint": "eslint . --ext .ts,.tsx,.vue --cache --color",
    "lintfix": "eslint . --ext .ts,.tsx,.vue --cache --color --fix",
    "commit": "git add . && git-cz"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "element-plus": "1.1.0-beta.17",
    "vue": "^3.2.6",
    "vue-router": "4",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/node": "^14.14.39",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "@vitejs/plugin-vue": "^1.6.1",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-define-config": "^1.0.9",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^7.17.0",
    "husky": "^1.3.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "sass": "^1.39.0",
    "typescript": "^4.3.2",
    "vite": "^2.5.4",
    "vite-plugin-eslint": "^1.3.0",
    "vue-tsc": "^0.2.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue}": [
      "npm run lint",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
